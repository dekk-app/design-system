{
  "name": "design-system",
  "version": "0.1.0",
  "private": true,
  "description": "The design system for Dekk",
  "repository": "git@github.com:dekk-app/design-system.git",
  "license": "MIT",
  "author": "Gregor Adams <greg@pixelass.com>",
  "main": "n/a",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prebuild": "yarn setup --build",
    "build": "lerna run build",
    "ncu": "ncu -u; yarn lerna exec 'ncu -u -x \"/^@dekk-ui/.*$/\"'",
    "ncu:minor": "ncu -t minor -u; yarn lerna exec 'ncu -t minor -u -x \"/^@dekk-ui/.*$/\"'",
    "ncu:patch": "ncu -t patch -u; yarn lerna exec 'ncu -t patch -u -x \"/^@dekk-ui/.*$/\"'",
    "spj": "npx sort-package-json package.json",
    "setup": "babel-node prepare/init.ts -x '.ts'",
    "storybook": "start-storybook",
    "build-storybook": "build-storybook -c .storybook -o public --quiet && percy storybook ./public",
    "prepare": "yarn setup",
    "unimported": "npx unimported",
    "watch": "lerna run watch"
  },
  "workspaces": [
    "atomic-design/atoms/*",
    "atomic-design/ions/*",
    "atomic-design/molecules/*",
    "atomic-design/organisms/*"
  ],
